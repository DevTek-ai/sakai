## Edit Site Information
<div class="portletBody container-fluid">
	#if($menu)#toolbar($menu)#end
	## header for edit site information page
	<div class="page-header">
		<h1>$tlang.getString("java.editschoolsite")</h1>
	</div>
<form name="classInformationForm" id="classInformationForm" method="post" action="#toolForm('SiteAction')" class="form school-form" style="max-width: 700px;">
    <div class="page-header">
        <h1>$tlang.getString("school.edit.header")</h1>
        <p class="instruction">$tlang.getString("school.edit.subtext")</p>
    </div>

    <div class="form-group">
        <label for="schoolName"><span class="reqStar">*</span> $tlang.getString("school.name"):</label>
        <input type="text" name="schoolName" id="schoolName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="address"><span class="reqStar">*</span> $tlang.getString("school.address"):</label>
        <input type="text" name="address" id="address" class="form-control" />
    </div>

    <div class="form-group">
        <label for="city"><span class="reqStar">*</span> $tlang.getString("school.city"):</label>
        <input type="text" name="city" id="city" class="form-control" />
    </div>

    <div class="form-group">
        <label for="state"><span class="reqStar">*</span> $tlang.getString("school.state"):</label>
        <select name="state" id="state" class="form-control">
            <option value="">-- Select State --</option>
            <option>Punjab</option>
            <option>Sindh</option>
            <option>Khyber Pakhtunkhwa</option>
            <option>Balochistan</option>
            <option>Islamabad Capital Territory</option>
            <option>Gilgit-Baltistan</option>
            <option>Azad Jammu & Kashmir</option>
        </select>
    </div>

    <div class="form-group">
        <label for="zipcode"><span class="reqStar">*</span> $tlang.getString("school.zip"):</label>
        <input type="text" name="zipcode" id="zipcode" class="form-control" />
    </div>

    <div class="form-group">
        <label>$tlang.getString("school.status"):</label><br />
        <label class="radio-inline"><input type="radio" name="status" value="active" checked /> $tlang.getString("school.status.active")</label>
        <label class="radio-inline"><input type="radio" name="status" value="inactive" /> $tlang.getString("school.status.inactive")</label>
    </div>

    <div class="form-group">
        <label>$tlang.getString("school.admins"):</label>
        <p><a href="#">Abram</a>, <a href="#">John</a>, <a href="#">Bob Aram</a></p>
    </div>

    <div class="form-group">
        <label for="description">$tlang.getString("school.description"):</label>
        <textarea name="description" id="description" cols="80" rows="10" class="form-control"></textarea>
        #chef_setupformattedtextarea("description")
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="continue" value="$tlang.getString('school.continue')" />
        <input type="submit" class="btn btn-secondary" name="cancel" value="$tlang.getString('school.cancel')" />
    </div>
</form>

	</div>
